<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:City_Center.View"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:view="clr-namespace:City_Center.Vista"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
             x:Class="City_Center.Page.InicioContent">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Icon="Chat"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Name="StyleButton" TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontFamily" Value="Oswald-Bold" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="Default">
                </Setter>
            </Style>
            <Style x:Name="EntryStyle" TargetType="xfx:XfxEntry">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontFamily" Value="Roboto-Regular" />
                <Setter Property="ActivePlaceholderColor" Value="#7A5BA5" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Spacing="0" BackgroundColor="#EFEFEF" BindingContext="{Binding Inicio}">
            <StackLayout>
                <ffimageloading:CachedImage Aspect="AspectFill" LoadingPlaceholder="image_loading.png" ErrorPlaceholder="image_error.png" Source="HOMEmin" HeightRequest="110" />
            </StackLayout>
            <StackLayout Padding="0,-30,0,0" HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Margin="10">
                <Grid CompressedLayout.IsHeadless="true">  
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto">
                    </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Aspect="AspectFit" Source="RESERVAHOTEL" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                    </Image>
                    <Image x:Name = "reservarHotel" Aspect="AspectFit" Source="RESERVAHOTEL_S" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Btn1_Clicked" />
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
                <Grid CompressedLayout.IsHeadless="true"> 
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto">
                    </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                     <Image Aspect="AspectFit" Source="TICKETSHOWS" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                      </Image>
                        <Image x:Name = "tickets" Aspect="AspectFit" Source="TICKETSHOWS" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Btn2_Clicked" />
                            </Image.GestureRecognizers>
                        </Image>
                </Grid>
                <Grid CompressedLayout.IsHeadless="true">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto">
                    </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Aspect="AspectFit" Source="RESERVATUMESA" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                     </Image>
                    <Image x:Name = "reservarMesa" Aspect="AspectFit" Source="RESERVATUMESA" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Btn3_Clicked" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <Grid CompressedLayout.IsHeadless="true">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto">
                    </ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Aspect="AspectFit" Source="TIENDAONLINE" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                        </Image>
                    <Image x:Name = "tienda" Aspect="AspectFit" Source="TIENDAONLINE" VerticalOptions="Start" HorizontalOptions="End" WidthRequest="80" HeightRequest="80" Grid.Column="0" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Btn4_Clicked" />
                        </Image.GestureRecognizers>
                    </Image>
               </Grid>
            </StackLayout>
            <ScrollView>
                <StackLayout>
                    <StackLayout x:Name="SL1" IsVisible="true" HorizontalOptions="FillAndExpand" Margin="5,18,5,5">
                        <Frame IsClippedToBounds="True" HasShadow="True" BackgroundColor="White">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness" Android="5" iOS="5" />
                            </Frame.Margin>
                            <Frame.Padding>
                                <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                            </Frame.Padding>
                            <StackLayout Orientation="Horizontal" BackgroundColor="#FFFFFF" HorizontalOptions="FillAndExpand">
                                <Grid HorizontalOptions="FillAndExpand" CompressedLayout.IsHeadless="true">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackLayout Margin="4" Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                                        <Label Text="Llegada"
                                               FontSize = "Medium"
                                               TextColor="Gray"
                                               Margin="5,0,0,0">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                          </Label>
                                           <xfx:XfxEntry x:Name="FechaInicio"
                                                  Text ="00/00/00"
                                                  Margin="5,-20,5,-12"
                                                  PlaceholderColor="Transparent"
                                                  Focused="FechaInicio_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>
                                    </StackLayout>
                                    <BoxView Color="Silver" Grid.Column="1" Grid.Row="0" Margin="0,5,0,5" />
                                    <StackLayout Margin="4" Orientation="Vertical" Grid.Column="2" Grid.Row="0">
                                        <Label Text="Salida"
                                               FontSize = "Medium"
                                               TextColor="Gray"
                                               Margin="5,0,0,0">
                                         <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                          </Label>
                                           <xfx:XfxEntry x:Name="FechaFinal"
                                                  Text ="00/00/00"
                                                         PlaceholderColor="Transparent"
                                                  Margin="5,-20,5,-12"
                                                  Focused="FechaFin_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>

                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                        <Frame IsClippedToBounds="True" HasShadow="True" BackgroundColor="White">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness" Android="5" iOS="5" />
                            </Frame.Margin>
                            <Frame.Padding>
                                <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                            </Frame.Padding>
                            <StackLayout>
                            <Label Text="Huéspedes"
                                   TextColor="Gray"
                                   Margin="8,4,0,0"
                                   FontSize="Medium">
                                   <Label.FontFamily>
                                      <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                       </OnPlatform>
                                   </Label.FontFamily>
                            </Label>
                                <xfx:XfxEntry x:Name="NoPersona"
                                              Text ="2"
                                              Margin="8,-20,5,-12"
                                              Keyboard="Numeric"
                                              TextChanged="Handle_TextChanged">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                </xfx:XfxEntry>
                            </StackLayout>
                        </Frame>
                        <Button Margin="30,10,30,10"
                                FontSize="14"
                                TextColor="White"
                                BackgroundColor="#250c4b"
                                Clicked="Handle_Clicked"
                                HeightRequest="40"
                                Text="VER OPCIONES">
                                  <Button.FontFamily>
                                      <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Medium"/>
                                                    <On Platform="Android" Value="Oswald-Medium.ttf#Oswald-Medium"/>
                                       </OnPlatform>
                                  </Button.FontFamily>
                         </Button>
                    </StackLayout>
                    <StackLayout x:Name="SL2" IsVisible="false" HorizontalOptions="FillAndExpand" Margin="5,18,5,5">
                        <Frame IsClippedToBounds="True" HasShadow="True" BackgroundColor="White">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness" Android="5" iOS="5" />
                            </Frame.Margin>
                            <Frame.Padding>
                                <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                            </Frame.Padding>
                            <StackLayout Orientation="Horizontal" BackgroundColor="#FFFFFF" HorizontalOptions="FillAndExpand">
                                <Grid HorizontalOptions="FillAndExpand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*">
                                        </ColumnDefinition>
                                        <ColumnDefinition Width="1*">
                                        </ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackLayout Margin="4" Orientation="Vertical" Grid.Column="0" Grid.Row="0">

                                      <Label Text="Rango de fecha"
                                               FontSize = "Medium"
                                               TextColor="Gray"
                                               Margin="7,0,0,0">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                          </Label>
                                         <xfx:XfxEntry x:Name="FechaRango1"
                                                  Text ="00/00/0000"
                                                  Margin="5,-20,5,-12"
                                                  PlaceholderColor="Transparent"
                                                  Focused="FechaRango1_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>
                                    </StackLayout>
                                    <StackLayout Margin="-30,4,4,4" Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                                        <Label Text="h"
                                               TextColor="White"
                                               FontSize="Medium">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                       <xfx:XfxEntry x:Name="FechaRango2"
                                                  Text ="00/00/0000"
                                                  HorizontalOptions="Start"
                                                  HorizontalTextAlignment="Start"
                                                  Margin="-30,-20,0,-12"
                                                  PlaceholderColor="Transparent"
                                                  Focused="FechaRango2_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>

                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                        <Frame IsClippedToBounds="True" HasShadow="True" BackgroundColor="White">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness" Android="5" iOS="5" />
                            </Frame.Margin>
                            <Frame.Padding>
                                <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                            </Frame.Padding>
                        </Frame>
                        <Button Margin="30,7,30,7"
                                FontSize="14"
                                TextColor="White"
                                BackgroundColor="#250c4b"
                                HeightRequest="40"
                                Text="VER OPCIONES">
                           <Button.FontFamily>
                                      <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Medium"/>
                                                    <On Platform="Android" Value="Oswald-Medium.ttf#Oswald-Medium"/>
                                       </OnPlatform>
                                  </Button.FontFamily>
                         </Button>
                    </StackLayout>
                    <StackLayout x:Name="SL3" IsVisible="false" HorizontalOptions="FillAndExpand" Margin="5,18,5,5" Spacing="0">
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*">
                                </ColumnDefinition>
                                <ColumnDefinition Width="1*">
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackLayout Grid.Row="0" Grid.ColumnSpan="2"  HorizontalOptions="FillAndExpand">
                                <Frame  IsClippedToBounds="True"
                                    HasShadow="True"
                                    BackgroundColor="White">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness" Android="4" iOS="4" />
                            </Frame.Margin>
                            <Frame.Padding>
                                <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                            </Frame.Padding>
                            <StackLayout Spacing="0">
                                <Grid HorizontalOptions="FillAndExpand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                     </Grid.RowDefinitions>
                                    <StackLayout Margin="4" Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                                        <Label Text="Fecha"
                                               TextColor="Gray"
                                               Margin="7,0,0,0"
                                               FontSize="Medium">
                                             <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                             <xfx:XfxEntry x:Name="FechaR1"
                                                  Text ="{Binding FechaInicio, Mode=TwoWay}"
                                                  Margin="5,-20,5,-12"
                                                  PlaceholderColor="Transparent"
                                                  Focused="FechaR1_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>
                                <!--"{Binding FechaInicio, Mode=TwoWay}"-->
                                    </StackLayout>
                                          <BoxView Color="Silver" Grid.Column="1" Grid.Row="0" Margin="0,5,0,5" />
                                    <StackLayout Margin="4" Orientation="Vertical" Grid.Column="2" Grid.Row="0">
                                        <Label Text ="Hora"
                                               TextColor="Gray"
                                               Margin="7,0,0,0"
                                               FontSize="Medium">
                                         <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                         <xfx:XfxEntry x:Name="HoraR1"
                                                  Text ="{Binding HoraInicio,Mode = TwoWay}"
                                                  Margin="5,-20,5,-12"
                                                  PlaceholderColor="Transparent"
                                                  Focused="HoraR1_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>
                                        <!--Time="{Binding HoraInicio, Mode=TwoWay}"-->
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                            </Frame>
                            </StackLayout>
                            <StackLayout Orientation="Vertical" Margin="0,-5"
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2">
                                 <Frame IsClippedToBounds="True"
                                   HasShadow="True"
                                   BackgroundColor="White">
                                    <Frame.Margin>
                                        <OnPlatform x:TypeArguments="Thickness" Android="4" iOS="4" />
                                    </Frame.Margin>
                                    <Frame.Padding>
                                        <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                                    </Frame.Padding>
                                   <StackLayout>
                                        <Label Text="Personas"
                                             TextColor="Gray"
                                             Margin="8,3,0,0"
                                             HorizontalOptions="Start"
                                             HorizontalTextAlignment="Start"
                                             FontSize="Medium">
                                             <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                        <xfx:XfxEntry x:Name="NoPersona1"
                                                  Text ="1"
                                                  Margin="5,-20,5,-5"
                                                  PlaceholderColor="Transparent"
                                                  Keyboard="Numeric">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                    </xfx:XfxEntry>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                            <StackLayout Orientation="Vertical" Margin="0,-5" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                                <Frame IsClippedToBounds="True" HasShadow="True" BackgroundColor="White">
                                    <Frame.Margin>
                                        <OnPlatform x:TypeArguments="Thickness" Android="4" iOS="4" />
                                    </Frame.Margin>
                                    <Frame.Padding>
                                        <OnPlatform x:TypeArguments="Thickness" Android="0" iOS="0" />
                                    </Frame.Padding>
                                    <StackLayout>
                                        <Label Text="Restaurants"
                                               TextColor="Gray"
                                               Margin="8,5,0,0"
                                               HorizontalOptions="Start"
                                               HorizontalTextAlignment="Start"
                                               FontSize="Medium">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                        <Grid Padding="5, 0">
                                        <Image Source="rowdown" WidthRequest="15" HorizontalOptions="End"/>  
                                        <xfx:XfxEntry x:Name="Restaurante"
                                                    Text = "{Binding NombreRestaurante,Mode=TwoWay}"
                                                  Margin="2,-20,5,-5"
                                                  PlaceholderColor="Transparent"
                                                  Keyboard="Text"
                                                  HorizontalOptions="Start"
                                                  HorizontalTextAlignment="Start"
                                                  Focused="Restaurant_Focused">
                                        <Entry.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="iOS">60</On>
                                                <On Platform="Android,Windows">60</On>
                                            </OnPlatform>
                                        </Entry.HeightRequest>
                                         <Entry.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS" Value="Oswald-Regular"/>
                                                    <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                                </OnPlatform>
                                            </Entry.FontFamily>
                                        </xfx:XfxEntry>
                                            </Grid>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
