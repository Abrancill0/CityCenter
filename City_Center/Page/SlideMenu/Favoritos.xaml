    <ContentPage.Content>
        <StackLayout Padding = "30,60" BindingContext="{Binding Favoritos}" BackgroundColor="#250C4B" >
            <StackLayout BackgroundColor = "#250C4B" Padding = "5,5">
            <cards:CarouselView x:Name="CarruselFavoritos"
