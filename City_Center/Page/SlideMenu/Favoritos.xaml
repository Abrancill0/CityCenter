                                     >
                                <cards:CarouselView.ItemTemplate>
                                    <DataTemplate>
                            <Grid RowSpacing="0"
                                  ColumnSpacing = "0" 
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="FillAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*">
                                    </ColumnDefinition>
                                    <ColumnDefinition Width="0.3*">
                                    </ColumnDefinition>
                                    <ColumnDefinition Width="0.3*">
                                    </ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="0.8*" />
                                    <RowDefinition Height="1.8*" />
                                </Grid.RowDefinitions>
                                <ffimageloading:CachedImage Aspect="Fill"
                                                            HeightRequest="330"
                                                            Grid.Row="0"
                                                            Grid.ColumnSpan="3"
                                                LoadingPlaceholder="image_loading.png"
                                                ErrorPlaceholder="image_error.png"
                                                Source="{Binding imagen_2}"/>
                                <StackLayout Orientation="Vertical"
                                             Grid.Row="1"
                                             Grid.Column = "0"
                                             BackgroundColor="#FFFFFF"
                                             Padding = "25,10">
                                    <Label Text="{Binding nombre}"
                                           BackgroundColor = "White"
                                           FontSize= "14"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start"
                                           TextColor = "#5D5D5D">
                                        <Label.FontFamily>
                                            <OnPlatform x:TypeArguments="x:String">
                                                <On Platform="iOS" Value="Oswald-Regular"/>
                                                <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                            </OnPlatform>
                                        </Label.FontFamily>
                                     </Label>
                                    <Label Text="{Binding fecha}"
                                           BackgroundColor = "White"
                                           FontSize= "12"
                                          TextColor = "#5D5D5D"
                                           HorizontalOptions="Start"
                                           VerticalOptions= "Start">
                                        <Label.FontFamily>
                                            <OnPlatform x:TypeArguments="x:String">
                                                <On Platform="iOS" Value="Oswald-Regular"/>
                                                <On Platform="Android" Value="Oswald-Regular.ttf#Oswald-Regular"/>
                                            </OnPlatform>
                                        </Label.FontFamily>
                                     </Label>
                                </StackLayout>
                                <StackLayout Padding = "10,10"
                                             Orientation="Horizontal"
                                             Grid.Row="1" 
                                             Grid.Column = "1"
                                             Grid.ColumnSpan="2"
                                             BackgroundColor = "White">
                                    <Image Aspect="AspectFit"
                                           Source="Fav"
                                           VerticalOptions = "Start"
                                           HorizontalOptions = "Center"
                                           HeightRequest = "30"
                                           WidthRequest = "30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding EliminaFavoritosCommand}" Tapped="CambiaIcono" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Image Aspect="AspectFit"
                                           Source="Compartir"
                                           VerticalOptions = "Start"
                                           HorizontalOptions = "Center"
                                           HeightRequest = "30"
                                           WidthRequest = "30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding CompartirCommand}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                 </StackLayout>
                                <StackLayout  Orientation="Vertical"
                                              Grid.Row="2"
                                              Grid.Column = "0"
                                              Grid.ColumnSpan="3"
                                              BackgroundColor="White"
                                              Spacing = "3"
                                              VerticalOptions="Start"
                                              Padding = "10,5">
                                    <Button VerticalOptions = "Center"
                                            Text="COMPRA ONLINE"
                                            HeightRequest = "35"
                                            Margin="25,5"
                                            TextColor="White"
                                            BackgroundColor="#250C4B"
                                            Command="{Binding CompraOnlineCommand}"
                                            IsVisible="{Binding ocultaonline,Mode=TwoWay}"/>
                                    <Button VerticalOptions = "Center"
                                            Text="COMPRA TELEFÃ“NICA"
                                            HeightRequest = "35"
                                            Margin="25,5"
                                            TextColor="White"
                                            BackgroundColor="#250C4B"
                                            Command="{Binding LlamarCommand}"
                                            IsVisible="{Binding ocultallamada,Mode=TwoWay}"/>
                                    <Button VerticalOptions = "Center"
                                            Text="INSCRIBIRSE"
                                            HeightRequest = "35"
                                            Margin="25,5"
                                            TextColor="White"
                                            BackgroundColor="#250C4B"
                                            Command="{Binding InscribirteTorneoCommand}"
                                            IsVisible="{Binding ocultatorneo,Mode=TwoWay}"/>

                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                                </cards:CarouselView.ItemTemplate>
                     <controls:IndicatorsControl x:Name="Indicador" 
                                Margin="0,-15,0,0"
                                />
                    
