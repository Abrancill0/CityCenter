                                                  SeparatorVisibility="None"
                                                  HasUnevenRows="true"
                                                  FlowColumnCount="3"
                                                  FlowItemsSource="{Binding HabitacionesDetalle}">
                                    <flv:FlowListView.FlowColumnTemplate>
                                        <DataTemplate>
                                            <Grid Padding="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <ffimageloading:CachedImage
                                                   Aspect="Fill"
                                                   HeightRequest="120"
                                                    LoadingPlaceholder="image_loading.png"
                                                    ErrorPlaceholder="image_error.png"
                                                    Source="{Binding hab_imagen}"
                                                    DownsampleToViewSize="true">
                                                    <ffimageloading:CachedImage.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding DetalleCommand}" />
                                                    </ffimageloading:CachedImage.GestureRecognizers>
                                                    <ffimageloading:CachedImage.Transformations>
                                                        <fftransformations:RoundedTransformation Radius="15" />
                                                    </ffimageloading:CachedImage.Transformations>
                                                </ffimageloading:CachedImage>
