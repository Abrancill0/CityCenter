                             <cards:CarouselView x:Name="CarruselPromociones"
                                    Items="{Binding PromocionesDetalle}"
                                                   HeightRequest="280"
                                                    HorizontalOptions="FillAndExpand">
                                    <cards:CarouselView.ItemTemplate>
                                        <DataTemplate>
