        <StackLayout>
            <Label Text="ENVÍO DE NOTIFICACIONES" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#250C4B" FontSize="Medium" ></Label>

            <StackLayout Margin="10" Orientation="Horizontal">
